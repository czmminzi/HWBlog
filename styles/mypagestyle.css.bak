.header{
	height: 100px;
	margin: 2% 20%;
	position: relative;
}
.logo{
	position: absolute;
	top: 0px;
	left: 0px;
	margin: 0px;
	padding: 0px;
}
.reg{
  position: absolute;
  top: 0px;
  right: 0px;
}
.reg div{
	display: inline-block;
	vertical-align: top;
}
.content{
  margin: auto 20%;
  padding: 0px;
  position: relative;
}
.content>div{
	margin: 0px;
	padding: 0px;
}
.main{
	width: 100%;
}
.myinfor{
	position: relative;
	width: 100%;
}
.face{
	position: absolute;
	top: 0px;
	left: 0px;
	height: 200px;
	width: 30%;
}
.profile{
	position: absolute;
	top: 0px;
	left: 31%;
	height: 200px;
	width: 69%;
}
#infroedit{
	float: right;
	padding: 5px;
}
.nav{
	width: 100%;
	margin: 0px;
	padding: 0px;
	position: absolute;
	top: 210px;
}
.nav>div{
	height: 50px;
	text-align: center;
	position: absolute;	
	line-height: 40px;
}
.nav>.articlenav{
	width: 32.67%;
	top: 0px;
	left: 0px;
}
.nav>.albumnav{
	width: 32.67%;
	top: 0px;
	left: 33.67%;	
}
.nav>.reviewnav{
	width: 32.67%;
	top: 0px;
	left: 67.34%;	
}
.write{
	float: right;
	padding: 5px;
}
.article{
	position: absolute;	
	top: 60px;
	left: 0px;
	height: 500px;
	width: 306.1%;
	text-align: left;
	display: block;
}
.album{
	position: absolute;
	top: 60px;
	left: -103%;
	height: 500px;
	width: 306.1%;
	text-align: left;
	display: none;
}
.review{
	position: absolute;
	top: 60px;
	left: -206%;
	height: 500px;
	width: 306.1%;
	text-align: left;
	display: none;
}
.maintitle{
  padding: 5px;
}
.arthead{
	position: relative;
}
.art{
	position: relative;
	height: 50px;
	width: 100%
	margin: 10px;
	padding: 5px;
	line-height: 40px;
}
.arttitle{
	padding: 5px;
}
.artstates{
	position: absolute;
  top: 5px;
	right: 5px;	
	height: 40px;
}
.artstates>div{
	float: right;
	padding: 5px;
}






body{
	color: #333333;
  background-color: #ffffff;	
}
.header{
  background-color: #336699;
}
.content>div>div>div{
	background-color: #99ccff;
}
.nav>.articlenav{
	background-color: #6699cc;
}
.article{
	background-color: #6699cc;
}
.album{
	background-color: #6699cc;
}
.review{
	background-color: #6699cc;
}
.articlenav:hover{
	color: #ffffcc;
	background-color: #6699cc;
}
.albumnav:hover{
	background-color: #6699cc;
}
.reviewnav:hover{
	background-color: #6699cc;
}






.maintitle{
	font-weight: bold;
	font-size: 1.2em;
}
.artstates{
	font-size: 0.7em;	
}
.write{
	font-weight: normal;
	font-size: 0.8em;	
}
.inforedit{
	font-weight: normal;
	font-size: 0.8em;	
}
